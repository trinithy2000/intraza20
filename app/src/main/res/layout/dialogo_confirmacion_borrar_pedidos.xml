<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/gradient">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/tituloDCBP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorFondoDatosLP">

    </RelativeLayout>

    <TextView
        android:id="@+id/textoMensajeAvisoDCBP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:text="@string/conf_eliminar"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:layout_alignTop="@+id/linearLayout2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="39dp" />

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/scrollMensajeAvisoDCBP"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_alignStart="@+id/textoMensajeAvisoDCBP"
        android:layout_below="@+id/textoMensajeAvisoDCBP"
        android:layout_marginTop="15dp"
        android:fadeScrollbars="false"
        android:layout_toStartOf="@+id/linearLayout2">

        <TextView
            android:id="@+id/textoScrollMensajeAvisoDCBP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

    </ScrollView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_below="@+id/textoInfoDCBP"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:id="@+id/linearLayout2">

        <Button
            android:id="@+id/siBotonDCBP"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:drawableTop="@drawable/boton_ok"
            android:text="@string/aceptar_M"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/black"
            android:textSize="@dimen/textSizeCircularButons"
            android:typeface="normal" />

        <Button
            android:id="@+id/noBotonDCBP"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@null"
            android:drawableTop="@drawable/boton_cancel"
            android:text="@string/cancelar_M"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/black"
            android:textSize="@dimen/textSizeCircularButons"
            android:typeface="normal" />
    </LinearLayout>

    <TextView
        android:id="@+id/textoInfoDCBP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorFondoDatoArticuloLP"
        android:gravity="center"
        android:text="@string/conf_borrar_M"
        android:textColor="@android:color/white"
        android:textSize="30sp" />
</RelativeLayout>